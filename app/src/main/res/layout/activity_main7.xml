<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7"
    android:background="@drawable/gradeint5">
    <TextView
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Your"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp">
    </TextView>
    <TextView
        android:id="@+id/account."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/create">
    </TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="500dp"
        android:layout_height="600dp"
        android:layout_below="@+id/account."
        android:padding="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        android:layout_marginTop="45dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="45dp"
                app:srcCompat="@drawable/download" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="Full Name"
                android:textColor="#CE0909"
                android:textSize="24sp"></TextView>

            <EditText
                android:id="@+id/name."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="20dp"
                android:text="John Smith"
                android:textSize="20dp"></EditText>

            <ImageView
                android:id="@+id/image6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="150dp"
                app:srcCompat="@drawable/download"></ImageView>

            <TextView
                android:id="@+id/gmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name."
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Phone or Gmail"
                android:textColor="#CE0909"
                android:textSize="24sp"></TextView>

            <EditText
                android:id="@+id/gmail."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gmail"
                android:layout_marginLeft="20dp"
                android:text="joyedeo@gmail.com"
                android:textSize="20dp"></EditText>

            <TextView
                android:id="@+id/Password."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gmail."
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Password"
                android:textColor="#CE0909"
                android:textSize="24sp"></TextView>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="235dp"
                app:srcCompat="@drawable/eye_password_hide_svgrepo_com" />

            <EditText
                android:id="@+id/confirm."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Password."
                android:layout_marginLeft="20dp"
                android:text="................."
                android:textSize="20dp"></EditText>

            <TextView
                android:id="@+id/ConfirmPassword."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirm."
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Confirm Password"
                android:textColor="#CE0909"
                android:textSize="24sp"></TextView>

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="315dp"
                app:srcCompat="@drawable/eye_password_hide_svgrepo_com" />

            <EditText
                android:id="@+id/pss."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ConfirmPassword."
                android:layout_marginLeft="20dp"
                android:text="..................."
                android:textSize="20dp"></EditText>

            <Button
                android:id="@+id/btnSIGNUP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pss."
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#660033"
                android:text="SIGN UP"
                android:textColor="@color/black"
                android:textSize="25dp"></Button>

            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSIGNUP"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="5dp"
                android:text="Don't have account?"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account"
                android:layout_marginLeft="250dp"
                android:text="sign up"
                android:textSize="24dp"
                android:textStyle="bold"></TextView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>